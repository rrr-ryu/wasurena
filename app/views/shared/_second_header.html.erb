<header>
  <div id="header-container">
    <div id="logo">
      <%= link_to "勿 忘", root_path, class:"logo-main"%>
      <%= link_to "Wasurena", root_path, class:"logo-sub"%>
    </div>
    <div id="header-right">
      <ul id="header-lists">
        <li class="header-list">
          <%= link_to "児童一覧", room_students_path(room_id: params[:room_id]) %></li>
        </li>
        <li class="header-list">
          <%= link_to "児童登録", new_room_student_path(room_id: params[:room_id]) %>
        </li>
        <li class="header-list">
          <%= link_to "クラス作成", new_room_team_path(room_id: params[:room_id]) %>
        </li>
        <li class="header-list">
          <%= link_to "送迎作成", new_room_pickup_path(room_id: params[:room_id]) %>
        </li>
      </ul>
      
      <div id="header-user">
        <% if user_signed_in?%>
          <div id="header-user-name">
          <p><%= current_user.name%><span>　▽</span></p>
          </div>
          <ul id="hidden">
            <li class="hidden-list"><%= link_to "全出席リセット", room_students_attend_reset_path, method: :put%></li>
            <li class="hidden-list"><%= link_to "全送迎リセット", room_students_ride_reset_path, method: :put%></li>
            <li class="hidden-list"><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
          </ul>
        <% end %>
      </div>

    </div>
  </div>
</header>